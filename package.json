{
  "name": "albert",
  "version": "1.0.0",
  "private": true,
  "description": "Training tool for colorimetry",
  "scripts": {
    "test": "jest",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "serve": "serve out",
    "build-static": "cross-env ALBERT_STATIC=true next build",
    "serve-static": "npm run static-build && npm run serve",
    "build-prod": "cross-env ALBERT_ENV=production next build"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "d.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "dependencies": {
    "munsell": "^1.1.3",
    "next": "14.2.10",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cross-env": "^7.0.3",
    "eslint": "^8",
    "eslint-config-next": "14.1.3",
    "jest": "^29.7.0",
    "serve": "^14.2.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5"
  }
}
